																			控件
																			
																			
px:像素
dp:独立像素
sp:缩放独立像素

1.TextView:
	组件的宽度		android:android:layout_width='(number)dp'
	组件的高度		android:layout_height='(number)dp'
	设置id			android:id="@+id/(id名称)"
	显示文本内容	android:text="(显示文本)"
	字体颜色		android:textColor="[#000000~#FFFFFF]"
	字体风格		android:textStyle="[normal(无效果), bold(加粗), italic(斜体)]"
	字体大小		android:textSize="(number)sp"
	控件背景		android:background="[#000000~#FFFFFF,@drawable/(图片名称.后缀)]"
	控件内元素位置	android:gravity=[]











































































